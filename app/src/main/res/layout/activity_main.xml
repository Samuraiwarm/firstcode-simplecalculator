<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_first_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="First Number"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edittext_first_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Number Here"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/text_first_number"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/text_second_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Number"
        app:layout_constraintTop_toBottomOf="@+id/edittext_first_number"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate!"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_operations"
        tools:layout_editor_absoluteX="16dp" />

    <RadioGroup
        android:id="@+id/radio_group_operations"
        android:layout_width="291dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_second_number"
        tools:layout_editor_absoluteX="16dp">

        <RadioButton
            android:id="@+id/radio_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add" />

        <RadioButton
            android:id="@+id/radio_subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subtract" />

        <RadioButton
            android:id="@+id/radio_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Multiply" />

        <RadioButton
            android:id="@+id/radio_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Divide" />
    </RadioGroup>

    <EditText
        android:id="@+id/edittext_second_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/text_second_number"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>